{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/frontend/*"],
      "@recruitpro/lib/*": ["lib/*"],
      "@recruitpro/components/*": ["components/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "noEmit": true
  }
}
